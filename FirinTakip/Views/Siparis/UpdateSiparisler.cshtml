@model EntityLayer.Concrete.Siparisler

@{
    ViewBag.Title = "UpdateSiparisler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Siparis Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("UpdateSiparisler", "Siparis", FormMethod.Post))
{
    <div class="form-group">

        @Html.Label("Müşteri ID")
        @Html.TextBoxFor(x => x.MusteriID, new { @class = "form-control" } )
        @Html.ValidationMessageFor(x => x.MusteriID)
        <br /><br />
        @Html.Label("Urun ID")
        @Html.TextBoxFor(x => x.UrunID, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.UrunID)
        <br /><br />
        @Html.Label("Adet")
        @Html.TextBoxFor(x => x.Adet, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Adet)
        <br /><br />
        @Html.Label(" Ödeme Şekli")
        @Html.TextBoxFor(x => x.OdemeSekli, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.OdemeSekli)
        <br /><br />
        @Html.Label("Tarih")
        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Tarih)
        <br /><br />
        @Html.Label("Aktiflik ")
        <span> : </span>
        @Html.CheckBox("Aktiflik")
        @Html.ValidationMessageFor(x => x.Aktiflik)
        <br /><br />
        <button class="btn btn-info">Güncelle</button>
    </div>
}
