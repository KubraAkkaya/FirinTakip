@using EntityLayer.Concrete
@model List<Siparisler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<table class="table table-bordered ">
    <tr>
        <th>ID</th>
        <th>Urun ID</th>
        <th>Urun İsmi</th>
        <th>Müşteri ID</th>
        <th>Müşteri Adı</th>
        <th>Adet</th>
        <th>Tarih</th>
        <th>Ödeme Şekli</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.ID</th>
            <th>@x.UrunID</th>
            <th>@x.Urun.UrunAdi</th>
            <th>@x.MusteriID</th>
            <th>@x.Musteri.Ad</th>
            <th>@x.Adet</th>
            <th>@x.Tarih</th>
            <th>@x.OdemeSekli</th>
            <td><a href="/Siparis/UpdateSiparisler/@x.ID" class="btn btn-info">Düzenle</a></td>
            <td><a href="/Siparis/DeleteSiparisler/@x.ID" class="btn btn-danger">Sil</a></td>
        </tr>
    }


</table>

<td><a href="/Siparis/AddSiparisler" class="btn btn-success">Siparis Ekle</a></td>
