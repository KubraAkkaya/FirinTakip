@model EntityLayer.Concrete.Urun
@{
    ViewBag.Title = "UpdateUrun";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Ürün Güncelleme Sayfası</h2>
@using (Html.BeginForm("UpdateUrun", "Urun", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Urun Adı")
        @Html.TextBoxFor(x => x.UrunAdi, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.UrunAdi)
        <br /><br />
        @Html.Label("Almanca Adı")
        @Html.TextBoxFor(x => x.AlmancaAdi, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AlmancaAdi)
        <br /><br />
        @Html.Label("Fiyat")
        @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Fiyat)
        <br /><br />
        @Html.Label("Tatlı")
        <span> : </span>
        @Html.CheckBoxFor(m => m.TatliMi.Value, new { id = "chkisdisplay", value = "FALSE" })

        @*@Html.CheckBoxFor(x => x.TatliMi, true)
        @Html.ValidationMessageFor(x => x.TatliMi)*@
        <br /><br />
        @Html.Label("Aktiflik ")
        <span> : </span> @Html.CheckBoxFor(x => x.Aktiflik.Value, true)işaretli gelmiyorrrrr
        @Html.ValidationMessageFor(x => x.Aktiflik)
        <br /><br />
        <br /><br />
        <button class="btn btn-info">Güncelle</button>
    </div>
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script>
    $(function () {
        $('#TatliMi').change(function () {
            debugger;
            if ($(this).attr('checked')) {
                $(this).val('TRUE');
            } else {
                $(this).val('FALSE');
            }
        });
    })
</script>